{
	"name": "swarm",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "./dist/main.js",
	"scripts": {
		"prepare": "simple-git-hooks",
		"dev": "dotenv -e .env.local -- tsx ./src/main.ts",
		"build": "tsgo",
		"format": "biome check --write --unsafe .",
		"check:format": "biome check .",
		"check:types": "tsgo --noEmit ."
	},
	"lint-staged": {
		"*": "secretlint",
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": "biome check --write --unsafe --no-errors-on-unmatched --files-ignore-unknown=true"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"keywords": [],
	"author": "OldBigBuddha<contact@oldbigbuddha.net>",
	"license": "MIT",
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@secretlint/secretlint-rule-preset-recommend": "11.0.2",
		"@tsconfig/strictest": "2.0.5",
		"@types/node": "24.3.0",
		"@typescript/native-preview": "7.0.0-dev.20250815.1",
		"dotenv-cli": "10.0.0",
		"lint-staged": "16.1.5",
		"secretlint": "11.0.2",
		"simple-git-hooks": "2.13.1",
		"tsx": "4.20.4",
		"typescript": "5.9.2"
	},
	"dependencies": {
		"@hono/node-server": "1.18.2",
		"hono": "4.9.2",
		"tslog": "4.9.3",
		"zod": "4.0.17"
	}
}
