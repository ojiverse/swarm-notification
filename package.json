{
	"name": "swarm-notification",
	"version": "1.0.0",
	"description": "Swarm API Real-time Integration Monorepo",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"packageManager": "pnpm@10.14.0",
	"scripts": {
		"backend": "pnpm --filter backend"
	},
	"lint-staged": {
		"*": "secretlint",
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": "biome check --write --unsafe --no-errors-on-unmatched --files-ignore-unknown=true"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"keywords": [],
	"author": "OldBigBuddha<contact@oldbigbuddha.net>",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@secretlint/secretlint-rule-preset-recommend": "11.0.2",
		"@tsconfig/strictest": "2.0.5",
		"@types/node": "24.3.0",
		"@typescript/native-preview": "7.0.0-dev.20250815.1",
		"dotenv-cli": "10.0.0",
		"lint-staged": "16.1.5",
		"secretlint": "11.0.2",
		"simple-git-hooks": "2.13.1",
		"tsx": "4.20.4",
		"typescript": "5.9.2"
	}
}
